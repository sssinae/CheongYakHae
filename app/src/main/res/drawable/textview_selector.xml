<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- 누를 때 연한 회색 배경 -->
            <corners android:radius="12dp" /> <!-- 모서리를 둥글게 -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" /> <!-- 기본 배경: 밝은 회색 -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#B0BEC5" /> <!-- 부드러운 회색 테두리 -->
        </shape>
    </item>
</selector>
