<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 제목 -->
        <TextView
            android:id="@+id/announcementTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공고 제목"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- 주택 유형 -->
        <TextView
            android:id="@+id/houseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: 행복주택" />

        <!-- 세부 유형 -->
        <TextView
            android:id="@+id/houseDetailType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Type: 청년형" />

        <!-- 공고 날짜 -->
        <TextView
            android:id="@+id/announcementDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 2023-11-26" />

        <!-- 공급 세대 수 -->
        <TextView
            android:id="@+id/supplyHouseholdCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supply: 20" />

        <!-- 문의 번호 -->
        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact: 123-456-7890" />

        <!-- URL -->
        <TextView
            android:id="@+id/announcementUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_light"
            android:text="URL: See more details"
            android:paddingTop="8dp"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
