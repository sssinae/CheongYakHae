<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 필터 박스 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <!-- 지역 필터 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지역"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:textColor="@android:color/black" />

                <!-- 지역 필터 행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 첫 번째 행 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/regionSeoul"
                            style="@style/FilterTextView"
                            android:text="서울" />

                        <TextView
                            android:id="@+id/regionBusan"
                            style="@style/FilterTextView"
                            android:text="부산" />

                        <TextView
                            android:id="@+id/regionDaegu"
                            style="@style/FilterTextView"
                            android:text="대구" />

                        <TextView
                            android:id="@+id/regionIncheon"
                            style="@style/FilterTextView"
                            android:text="인천" />

                        <TextView
                            android:id="@+id/regionGwangju"
                            style="@style/FilterTextView"
                            android:text="광주" />

                        <TextView
                            android:id="@+id/regionDaejeon"
                            style="@style/FilterTextView"
                            android:text="대전" />


                    </LinearLayout>

                    <!-- 두 번째 행 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/regionUlsan"
                            style="@style/FilterTextView"
                            android:text="울산" />
                        <TextView
                            android:id="@+id/regionSejong"
                            style="@style/FilterTextView"
                            android:text="세종" />

                        <TextView
                            android:id="@+id/regionGyeonggi"
                            style="@style/FilterTextView"
                            android:text="경기" />

                        <TextView
                            android:id="@+id/regionGangwon"
                            style="@style/FilterTextView"
                            android:text="강원" />

                        <TextView
                            android:id="@+id/regionChungbuk"
                            style="@style/FilterTextView"
                            android:text="충북" />

                        <TextView
                            android:id="@+id/regionChungnam"
                            style="@style/FilterTextView"
                            android:text="충남" />

                    </LinearLayout>

                    <!-- 세 번째 행 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:id="@+id/regionJeonbuk"
                            style="@style/FilterTextView"
                            android:text="전북" />

                        <TextView
                            android:id="@+id/regionJeonnam"
                            style="@style/FilterTextView"
                            android:text="전남" />
                        <TextView
                            android:id="@+id/regionGyeongbuk"
                            style="@style/FilterTextView"
                            android:text="경북" />

                        <TextView
                            android:id="@+id/regionGyeongnam"
                            style="@style/FilterTextView"
                            android:text="경남" />

                        <TextView
                            android:id="@+id/regionJeju"
                            style="@style/FilterTextView"
                            android:text="제주" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 주택 유형 필터 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주택 유형"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/houseLand"
                        style="@style/FilterTextView"
                        android:text="토지" />

                    <TextView
                        android:id="@+id/houseSale"
                        style="@style/FilterTextView"
                        android:text="분양주택" />

                    <TextView
                        android:id="@+id/houseLease"
                        style="@style/FilterTextView"
                        android:text="임대주택" />

                    <TextView
                        android:id="@+id/houseWelfare"
                        style="@style/FilterTextView"
                        android:text="주거복지" />
                    <TextView
                        android:id="@+id/houseShop"
                        style="@style/FilterTextView"
                        android:text="상가" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/houseNewlyWed"
                        style="@style/FilterTextView"
                        android:text="신혼희망타운" />
                </LinearLayout>

                <!-- 지원 자격 필터 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지원 자격"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/qualificationYouth"
                        style="@style/FilterTextView"
                        android:text="청년" />

                    <TextView
                        android:id="@+id/qualificationSingle"
                        style="@style/FilterTextView"
                        android:text="신혼부부" />

                    <TextView
                        android:id="@+id/qualificationTwoChildren"
                        style="@style/FilterTextView"
                        android:text="다자녀" />
                </LinearLayout>

                <!-- 필터 적용 버튼 -->
                <Button
                    android:id="@+id/applyFilterButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="필터 적용"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"
                    android:padding="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 선택된 필터 표시 -->
        <TextView
            android:id="@+id/selectedFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택된 필터: "
            android:textSize="14sp"
            android:textStyle="italic"
            android:paddingBottom="16dp" />

        <!-- ProgressBar 추가 -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/announceRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingBottom="16dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
